<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/dialog_bg"
              android:layout_width="265dp"
              android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍摄范例"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff000000"
            android:layout_marginTop="13dp"
            android:textSize="17sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请参考拍摄范例重新拍摄"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffa1a1a1"
            android:textSize="12sp"/>

    <ImageView android:layout_width="182dp" android:layout_height="93dp"
               android:layout_gravity="center_horizontal"
               android:src="@mipmap/ic_take_photo_stand"/>

    <TextView
            android:layout_marginTop="37dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="温馨提示：\n1.请将银行卡放平；\n2.请确保边框完整，文字清晰可见。"
            android:textColor="#ff000000"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"/>

    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="@color/line_color"/>

    <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="#ff1a6ed2"
            android:textSize="18sp"/>
</LinearLayout>