<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/tv_c1"
            app:layout_constraintRight_toRightOf="@+id/tv_c3"
            app:layout_constraintTop_toTopOf="@+id/tv_c1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_c1"
            android:max="4"
            android:thumb="@null"
            android:progress="1"
            android:minHeight="1dp"
            android:maxHeight="1dp"
            android:progressDrawable="@drawable/bg_seekbar"
    />


    <TextView
            android:id="@+id/tv_c1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_txt1"
            app:layout_constraintRight_toRightOf="@+id/tv_txt1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_open_account_step_symbol"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="1"
            android:gravity="center"
    />


    <TextView
            android:id="@+id/tv_c2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_c1"
            app:layout_constraintRight_toLeftOf="@+id/tv_c3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_open_account_step_symbol"
            android:enabled="false"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="2"
            android:gravity="center"
    />


    <TextView
            android:id="@+id/tv_c3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_txt3"
            app:layout_constraintRight_toRightOf="@+id/tv_txt3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_open_account_step_symbol"
            android:enabled="false"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="3"
            android:gravity="center"
    />


    <TextView
            android:id="@+id/tv_txt1"
            android:text="身份验证"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@drawable/bg_open_account_step_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_txt2"
            android:text="资料填写"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@drawable/bg_open_account_step_txt"
            app:layout_constraintLeft_toRightOf="@+id/tv_c1"
            app:layout_constraintRight_toLeftOf="@+id/tv_c3"
            app:layout_constraintTop_toBottomOf="@+id/tv_c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
    />

    <TextView
            android:id="@+id/tv_txt3"
            android:text="资料审核"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@drawable/bg_open_account_step_txt"
            app:layout_constraintTop_toBottomOf="@+id/tv_c1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
    />


</androidx.constraintlayout.widget.ConstraintLayout>