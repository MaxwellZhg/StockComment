<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="unableBackgroundColor">#8db9e4</item>
        <item name="normalBackgroundColor">@color/app_bule</item>
        <item name="pressedBackgroundColor">#145bb3</item>
        <item name="radius">3dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnStrokeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="unableStrokeColor">#666666</item>
        <item name="normalStrokeColor">#333333</item>
        <item name="pressedStrokeColor">#000000</item>
        <item name="normalStrokeWidth">1dp</item>
        <item name="pressedStrokeWidth">1dp</item>
        <item name="unableStrokeWidth">1dp</item>
        <item name="radius">3dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btnStrokeStyle.Bule" parent="btnStrokeStyle">
        <item name="unableStrokeColor">#8db9e4</item>
        <item name="normalStrokeColor">@color/app_bule</item>
        <item name="pressedStrokeColor">#145bb3</item>
        <item name="radius">3dp</item>
        <item name="android:textColor">@color/app_bule</item>
    </style>

    <style name="oaDataTipsToptxt">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="openAccountStep">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginRight">23dp</item>
    </style>

    <style name="openAccountSubTitle">
        <item name="android:textColor">#282828</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="openAccountSubTitleDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A1A1A1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="openAccountLine">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="openAccountItem">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="ZRTitleTextViewRightArrow" parent="openAccountItem">
        <item name="zr_iconVisible">true</item>
        <item name="zr_iconSrc">@mipmap/ic_small_arrow</item>
        <item name="zr_iconWidth">7dp</item>
        <item name="zr_iconHight">11dp</item>
    </style>

    <style name="ZRCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#282828</item>
        <item name="android:drawableLeft">@drawable/checkbox_style</item>
        <item name="android:drawableStart">@drawable/checkbox_style</item>
        <item name="colorControlNormal">@color/app_bule</item>
        <item name="colorControlActivated">@color/app_bule</item>
    </style>
</resources>