<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
  <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                 android:background="@color/tab_bar_bg">
              <LinearLayout  android:layout_width="wrap_content" 
                              android:layout_height="wrap_content"
                             android:id="@+id/ll_add_stock"
                             android:layout_marginTop="25dp"
                             android:layout_centerInParent="true"
                             android:layout_marginBottom="25dp"
                              android:orientation="horizontal">
                  <ImageView android:layout_width="23dp"
                             android:layout_height="24dp"
                             android:background="@mipmap/ic_add_icon"/>
                  <TextView android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="19dp"
                            android:textColor="@color/stock_code"
                            android:text="@string/add_choose_stock"/>
              </LinearLayout>
  </RelativeLayout>
</LinearLayout>